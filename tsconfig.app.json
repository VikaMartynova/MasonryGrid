{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",  //"bundler",
    "jsx": "react-jsx", // ✅ Enables JSX with the modern React transform
    "types": ["vite/client", "react", "react-dom", "jest", "@testing-library/jest-dom", "@testing-library/react"], // ✅ Loads React/DOM types
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "isolatedModules": true
  },
  "include": ["src"]
}